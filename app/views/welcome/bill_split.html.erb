<div class="container">
<div class="page-title"><h1>Bill Splitter</h1></div>
<div class="shadow-sm p-3 mb-3 bg-white rounded overflow-wrap">
<div class="p-3 mb-5 bg-white rounded">



<%= form_tag("/process_bill") do %>
<div class="p-3 mb-5 bg-white rounded">
  <div>
    <%= label_tag(:amount) %> <br>
    <%= text_field_tag(:amount) %>
  </div>

  <div>
    <%= label_tag(:tax) %> <br>
    <%= text_field_tag(:tax) %>
  </div>

  <div>
    <%= label_tag(:tip) %> <br>
    <%= text_field_tag(:tip) %>
  </div>

  <div>
    <%= label_tag(:number_of_people) %> <br>
    <%= text_field_tag(:number_of_people) %>
  </div><br>
  <%= submit_tag("Calculate")%>
  </div>
<% end %>

<% if @split%>
<h1>Every person must pay $<%= @split %></h1>
<% end %>
</div>
</div>
</div>