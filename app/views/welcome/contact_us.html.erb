<div class="container">
<div class="page-title"><h1>Contact Us</h1></div>
<div class="shadow-sm p-3 mb-3 bg-white rounded overflow-wrap">
<div class="card-body">
<%= form_tag("/process_contact") do %>
<div class="card-body p-3 mb-5 bg-white rounded">
  <div class='form-group'>
    <%= label_tag(:full_name) %> <br>
    <%= text_field_tag(:full_name) %>
  </div>

  <div class='form-group'>
    <%= label_tag(:email) %> <br>
    <%= email_field_tag(:email) %>
  </div>

  <div class='form-group'>
    <%= label_tag(:message) %> <br>
    <%= text_area_tag(:message) %>
  </div>

  <%= submit_tag("Contact Us")%>
  </div>
<% end %>
</div>
</div>
</div>

