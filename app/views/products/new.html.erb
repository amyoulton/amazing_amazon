

<div class="page-title"><h1>New Product Page</h1></div>
<div class="card mb-4">
<div class="card-body">
<% if @product.errors.present? %>
  <p>
    <%= @product.errors.full_messages.join(', ')%>
  </p>
<% end %>
<%= form_with model: @product, local:true do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field(:title, class: 'form-control')%>
  </div>
  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_area(:description, class: 'form-control', cols: 50, rows: 5)%>
  </div>
  <div class='form-group'>
    <%= f.label :price %>
    <%= f.number_field(:price, value: '%.2f', class: 'form-control', min: 0, step: '0.01')%>
  </div>
  <%= f.submit "Create", class: 'btn' %>
<% end %>
</div>
</div>
