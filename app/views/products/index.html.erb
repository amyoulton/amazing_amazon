

<div class="page-title"><h1>Product List</h1></div>
<div class="shadow-sm p-3 mb-5 bg-white rounded">
<div class="p-3 mb-5 bg-white rounded" >

  <div>
    <% @products.each do |product| %>
    <%# if you pass a instance to link_to it will create the href='/questions/:id' %>
      <%= link_to product do %>
        <li class='list-group-item mb-3 bg-white rounded'>
          <h3><%= product.title %></h3>
      <% end %>
          <p><%= product.description%></p>
          <h5><%= number_to_currency(product.price)%></h5>
        </li>
    <% end %>
  </div>
</div>
</div>
</div>

